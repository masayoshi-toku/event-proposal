---
export interface Props {
  voted: boolean;
}

const { voted = false } = Astro.props;
const buttonClass = voted ? 'bi-hand-thumbs-up-fill' : 'bi-hand-thumbs-up'
---

<i class={`bi ${buttonClass} vote-btn text-black text-lg`} aria-label="投票する"></i>

<style lang="scss">
  .vote-btn {
    cursor: pointer;
  }
</style>
